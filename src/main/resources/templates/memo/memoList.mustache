{{>layout/header}}

<div class="container pb-69 conHeight">
    <div class="page-header">
        <h1>메모 목록</h1>
    </div>
    <div class="memoList-container">
        {{#memoList}}
            <div class="memo-container col-md-offset-3 col-md-6 mr-25per">
                <br/>
                <h4>{{id}} 번 메모</h4><br/>
                <div>
                    <button type="button" id="btn-deleteMemo" class="btn-deleteMemo deleteBtn btn btn-default"
                            aria-label="deleteBtn">
                        <input class="id" id="id" name="id" value="{{id}}" type="hidden"/>
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </button>
                </div>
                <table class="table table-hover">
                    <tbody>
                    <tr style="background-color: #FAFAFA">
                        <th>링크</th>
                    </tr>
                    <tr>
                        <td><a href="{{link}}">{{link}}</a></td>
                    </tr>
                    <tr style="background-color: #FAFAFA">
                        <th>상세내용</th>
                    </tr>
                    <tr>
                        <td class="content">{{content}}</td>
                    </tr>
                    <tr style="background-color: #FAFAFA">
                        <th>작성 날짜</th>
                    </tr>
                    <tr>
                        <td class="createDate">{{createDate}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {{/memoList}}
    </div>

    <nav aria-label="Page navigation" style="text-align: center;">
        <ul class="pagination">
            <li><a href="/memoList?page=1">&laquo;</a></li>

            <li class="prevPage">
                <a href="/memoList?page={{pages.prevPage}}">&lsaquo;</a>
            </li>
            {{#pages.pageNums}}
                <li id="page{{page}}" class="">
                    <a href="/memoList?page={{page}}">{{page}}
                    <span class="sr-only"></span>
                    </a>
                </li>
            {{/pages.pageNums}}
            <li class="nextPage">
                <a href="/memoList?page={{pages.nextPage}}">&rsaquo;</a>
            </li>
            <li>
                <a href="/memoList?page={{memoList.totalPages}}">&raquo;</a>
            </li>
            <input type="hidden" id="lastPage" value="{{memoList.totalPages}}"/>

        </ul>
    </nav>

</div>

{{>layout/footer}}

<link rel="stylesheet" href="/css/memo.css"/>

